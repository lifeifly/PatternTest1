<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        style="@style/DialogConfigLayout"
        android:orientation="horizontal">

        <TextView
            style="@style/DialogShowDesc"
            android:text="骑行参数：" />

        <TextView
            android:id="@+id/tv_run_result"
            style="@style/DialogShowContent"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        style="@style/DialogConfigLayout"
        android:orientation="horizontal">

        <TextView
            style="@style/DialogShowDesc"
            android:text="最高速度：" />

        <EditText
            android:id="@+id/et_max_speed"
            style="@style/DialogInputContent"
            android:text="" />

        <TextView
            style="@style/DialogShowDesc"
            android:text="加速模式：" />

        <EditText
            android:id="@+id/et_add_speed_mode"
            style="@style/DialogShowContent"
            android:text="" />
    </LinearLayout>

        <LinearLayout
            style="@style/DialogConfigLayout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="仪表显示单位：" />

            <EditText
                android:id="@+id/et_show"
                style="@style/DialogInputContent"
                android:hint="仪表显示单位"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            style="@style/DialogConfigLayout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="车辆信息上报间隔：" />

            <EditText
                android:id="@+id/et_report_time"
                style="@style/DialogShowContent"
                android:hint="车辆信息上报间隔"
                android:text="" />


        </LinearLayout>


        <LinearLayout
            style="@style/DialogConfigLayout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="待机关机时间：" />

            <EditText
                android:id="@+id/et_close_time"
                style="@style/DialogInputContent"
                android:hint="待机关机时间"
                android:text="" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>